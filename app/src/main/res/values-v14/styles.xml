<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    
    <style name="WelcomeTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:windowNoTitle">true</item>  
    	<item name="android:windowBackground">@drawable/welcome</item>  
    </style>
    
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:windowBackground">@color/list_bg</item>
        <item name="android:actionBarStyle">@style/ActionbarStyle</item>
    </style>
    
    <style name="ActionbarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/main_bg</item>
        <item name="android:titleTextStyle">@style/ActionbarTitleTextStyle</item>
        <item name="android:icon">@drawable/ic_logo</item>
    </style>

    <style name="ActionbarTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="SelectableItem">
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>
    
    <style name="TextSettingItem">
        <item name="android:textSize">16.5sp</item>
        <item name="android:textColor">#ff59493f</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">51.299988dip</item>
        <item name="android:drawablePadding">12.5dip</item>
    </style>
    
    <style name="MoreSettingItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">51.299988dip</item>
    </style>
    
    <style name="MoreItemTextStyle">
        <item name="android:textSize">16.5sp</item>
        <item name="android:textColor">#ff59493f</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">51.299988dip</item>
        <item name="android:drawablePadding">12.5dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
    <style name="SettingAttributeText">
        <item name="android:textSize">16.5sp</item>
        <item name="android:textColor">#ff4d0c14</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5.0dip</item>
    </style>

</resources>
